<div class="modal-dialog create-group-form">
  <div class="modal-content create-group-modal">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">
        &times;
      </button>
    </div>
    <div class="modal-body">
      <%= form_for group, remote: true do |f| %>
        <div class="col-md-8 col-md-offset-2">
          <div class="group-form-errors">
            <% if group.errors.any? %>
              <%= render "shared/error_messages", object: group %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :name, t("groups.name-group") %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :policy, t("groups.set-policy") %>
            <div class="policy">
              <%= f.radio_button :policy, "is_public", checked: true %>
              <%= t "groups.is-public" %>
            </div>
            <div class="policy">
              <%= f.radio_button :policy, "is_private" %>
              <%= t "groups.is-private" %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit yield(:button_text), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
