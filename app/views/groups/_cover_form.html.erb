<div id="group-cover-modal" class="modal fade" role="dialog">
  <div class="modal-dialog cover-modal">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="modal-title"><%= t "change-cover" %></h4>
      </div>
      <div class="modal-body">
        <%= form_for group, method: :patch, multipart: true,
          authenticity_token: true, remote: true do |f| %>
          <div class="group-form-errors">
            <%= render "shared/error_messages", object: group %>
          </div>

          <div class="group-cover-img">
            <div>
              <%= image_tag cover_group(group), class: "img-responsive
                group-cover-edit" %>
            </div>
            <span>
              <%= f.file_field :cover, class: "cover-file-field" %>
            </span>
          </div>

          <div class="group-form-submit">
            <%= f.submit t("save-changes"), class: "btn btn-primary group-cover-btn-save" %>
            <button class="btn btn-danger group-cover-btn-cancel"
              data-dismiss="modal">
              <%= t "cancel" %>
            </button>
          </div>
          <div class="clearfix"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
